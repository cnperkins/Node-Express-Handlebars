<div class="row">

    <div class="col-6 mx-auto">
        <h1>Burgers!</h1>

        <h2 class="left">Not Yet Devoured!</h2>

        <ul class=p-1 style="list-style-type: none;">
            {{#each burger}}
            {{#unless devoured}}
            <p class="bg-secondary p-1 border">{{id}} - {{burger_name}}</p>
            {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="col-6 mx-auto">
        <h2 class="right">Devoured</h2>

        <ul class=p-1 style="list-style-type: none;">
            {{#each burger}}
            {{#if devoured}}
            <p class="bg-secondary p-1 border">{{id}} - {{burger_name}}</p>
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <form class="create-form mx-auto">
        <div class="form-group">
            <textarea type="text" id="ca" name="name"></textarea>
        </div>
        <button class="mx-auto" type="submit">Add Burger</button>

    </form>

</div>